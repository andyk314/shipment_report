<h1>New Invoice</h1>

<%= form_for @invoice, url: {action: "create"} do |f| %>
  <%= f.collection_radio_buttons :invoice_type, Invoice.invoice_types, :first, :first %><br />
  <%= f.date_field :invoice_date %>
  <%= label :invoice_date, 'Invoice Date' %><br />
  <%= f.number_field :invoice_amount %>
  <%= label :invoice_amount, 'Invoice Amount'%><br />
  <%= f.text_field :reference_number %>
  <%= label :reference_number, 'Reference Number'%><br />
  <%= f.submit "Create Invoice" %>
<% end %>

<%= link_to 'Back to Invoices', invoices_url %>
